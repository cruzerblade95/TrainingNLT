<h1>Children</h1>

<table>
  <thead>
    <tr>
      <th>Children name</th>
      <th>Children nric</th>
      <th>Children age</th>
      <th>Children sex</th>
      <th>Personal detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.children_name %></td>
        <td><%= child.children_nric %></td>
        <td><%= child.children_age %></td>
        <td><%= child.children_sex %></td>
        <td><%= child.personal_detail %></td>
        <td><%= link_to 'Show', child %></td>
        <td><%= link_to 'Edit', edit_child_path(child) %></td>
        <td><%= link_to 'Destroy', child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

