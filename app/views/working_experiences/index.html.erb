<p id="notice"><%= notice %></p>

<h1>Working Experiences</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Designation</th>
      <th>Reason leaving</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Personal detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @working_experiences.each do |working_experience| %>
      <tr>
        <td><%= working_experience.company_name %></td>
        <td><%= working_experience.designation %></td>
        <td><%= working_experience.reason_leaving %></td>
        <td><%= working_experience.year %></td>
        <td><%= working_experience.duration %></td>
        <td><%= working_experience.personal_detail %></td>
        <td><%= link_to 'Show', working_experience %></td>
        <td><%= link_to 'Edit', edit_working_experience_path(working_experience) %></td>
        <td><%= link_to 'Destroy', working_experience, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

