<%= render "layouts/menubar"%>
<div class="container-background">
  <div class="container">
  <h2>Staff Management</h2>

<p id="notice"><%= notice %></p>

<h1>All Staff List</h1>
<br/>
<br/>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>NRIC</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>Place of Birth</th>
      <th>Race</th>
      <th>Religion</th>
      <th>Marital Status</th>
      <th>Permanent Address</th>
      <th>Postcode</th>
      <th>State</th>
      <th>Telephone No.</th>
      <th>HP No.</th>
      <th>Correspondance Address</th>
      <th>Employment Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personal_details.each do |personal_detail| %>
      <tr>
        <td><%= personal_detail.staff_name %></td>
        <td><%= personal_detail.staff_nric %></td>
        <td><%= personal_detail.staff_dob %></td>
        <td><%= personal_detail.staff_sex %></td>
        <td><%= personal_detail.staff_pob %></td>
        <td><%= personal_detail.staff_race %></td>
        <td><%= personal_detail.staff_religion %></td>
        <td><%= personal_detail.staff_marital_status %></td>
        <td><%= personal_detail.staff_perm_address %></td>
        <td><%= personal_detail.staff_postcode %></td>
        <td><%= personal_detail.staff_state %></td>
        <td><%= personal_detail.staff_tel_no %></td>
        <td><%= personal_detail.staff_hp_no %></td>
        <td><%= personal_detail.staff_corr_address %></td>
        <td><%= personal_detail.staff_employ_type %></td>
        <td><%= link_to 'Show', personal_detail %></td>
        <td><%= link_to 'Edit', edit_personal_detail_path(personal_detail) %></td>
        <td><%= link_to 'Delete', personal_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>
<%= render "layouts/footer"%>

<style>
.container-background{
  height: 350px;
}
</style>
